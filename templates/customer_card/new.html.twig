        <div class="col-lg-3">
            {{ form_start(form) }}
                {{ form_widget(form) }}

                <div class="mb-3">
                    <label class="form-label" for="serviceNumber">{% trans %}Service Number{% endtrans %}</label>
                    <input type="text" id="serviceNumber" class="form-control" name="serviceNumber" type="text"> 
                </div>
                <div class="mb-3">
                    <label class="form-label" for="dateHour">{% trans %}DateHour{% endtrans %}</label>
                    <input type="datetime-local" id="dateHour" class="form-control" name="dateHour" type="text"> 
                </div>

                <div class="mb-3">
                    <label class="form-label" for="flightNumber">{% trans %}Flight Number{% endtrans %}</label>
                    <input id="flightNumber" class="form-control" name="flightNumber" type="text"> 
                </div>
                <div class="mb-3">
                    <label class="form-label" for="date">{% trans %}Date{% endtrans %}</label>
                    <input type="date" id="date" class="form-control" name="date" type="text"> 
                </div>
                <div class="mb-3">
                    <label class="form-label" for="hour">{% trans %}Hour{% endtrans %}</label>
                    <input type="time" id="hour" class="form-control" name="hour" type="text"> 
                </div>
                <div class="mb-3">
                    <label class="form-label required" for="fromStart">{% trans %}From Start{% endtrans %}</label>
                    <select id="fromStart" name="fromStart" class="form-select">
                        {% for airport in airports %}
                            <option value="{{ airport.id}}">{{ airport }}</option>
                        {% endfor %}
                    </select>        
                </div>
                <div class="mb-3">
                    <label class="form-label required" for="toArrival">{% trans %}From Start{% endtrans %}</label>
                    <select id="toArrival" name="toArrival" class="form-select">
                        {% for hotel in hotels %}
                            <option value="{{ hotel.id}}">{{ hotel }}</option>
                        {% endfor %}
                    </select>        
                </div>
                <div class="mb-3">
                    <fieldset>
                        <legend>Is the transport collective ?</legend>
                        <div class="form-check">

                            <input type="radio" id="collective" name="isCollective" value="1" checked />
                            <label for="collective">Collective</label>
                            <input type="radio" id="notCollective" name="isCollective" value="0" />
                            <label for="notCollective">Not Collective</label>
                
                        </div>   
                    </fieldset>     
                </div>

