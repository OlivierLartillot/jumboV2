{{ include('partials/header-reproupement.html.twig') }}


    {{ include('partials/page-title.html.twig', {pagetitle: 'General Settings', title: 'Areas'}) }}

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <a href="{{ path('app_area_new') }}" class="btn btn-success waves-effect waves-light"><i class="mdi mdi-plus me-2"></i> {% trans %}Add New{% endtrans %}</a>
                                </div>
                            </div>
                        </div>
                        <!-- end row -->
                        <div class="table-responsive mb-4">
                            <table class="table table-centered table-nowrap mb-0">
                                <thead>
                                    <tr>
                                    <th scope="col">id</th>
                                    <th scope="col">{% trans %}Name{% endtrans %}</th>
                                    <th scope="col" style="width: 200px;">{% trans %}Edit{% endtrans %}</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    {% for area in areas %}
                                    <tr>
                                        <td>{{area.id}}</td>
                                        <td>{{area.name}}</td>

                                        <td>
                                            <ul class="list-inline mb-0">
                                                <li class="list-inline-item">
                                                    <a href="{{ path('app_area_edit', {'id': area.id}) }}" class="px-2 text-primary"><i class="uil uil-pen font-size-18"></i></a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="4">{% trans %}no records found{% endtrans %}</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div> 
        </div>
                            
