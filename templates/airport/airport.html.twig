                                                                <p class="text-muted mb-2">{% trans %}Flight{% endtrans %} #</p>
                                                                <h5 class="font-size-16 mb-0">{{ transferArrival.flightNumber }}</h5>
                                                            </div>
                                                        </div>
                                                    </div>
            
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            {% endfor %}


                        </div>

