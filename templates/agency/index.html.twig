{{ include('partials/header-reproupement.html.twig') }}
    {{ include('partials/page-title.html.twig', {pagetitle: 'Agency', title: 'Agencies list'}) }}


    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <div class="table-responsive mb-4">
                        <table class="table table-centered table-nowrap mb-0">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>IsActive</th>
                                    <th>Language</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for agency in agencies %}
                                    <tr>
                                        <td>{{ agency.id }}</td>
                                        <td>{{ agency.name|title }}</td>
                                        <td>{{ agency.isActive ? 'Yes' : 'No' }}</td>
                                        <td>{{ agency.language ? agency.language : "en" }}</td>
                                        <td>
                                            <ul class="list-inline mb-0">
                                                <li class="list-inline-item">
                                                    <a href="{{ path('app_agency_edit', {'id': agency.id}) }}" class="px-2 text-primary"><i class="uil uil-pen font-size-18"></i></a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5">no records found</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div> 
    </div>
{{ include('partials/footer-regroupement.html.twig') }}