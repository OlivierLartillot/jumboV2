{{ form_start(form) }}

    <div class="form-control">
        <i class="fa fa-calendar"></i> {{ form_label(form.name) }}
        {{ form_widget(form.name) }}

        <small>{{ form_help(form.name) }}</small>

        <div class="form-error">
            {{ form_errors(form.name) }}
        </div>
    </div>

    <button class="btn btn-success mt-3">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
