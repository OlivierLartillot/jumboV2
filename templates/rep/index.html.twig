    </div>

    <div class="row justify-content-center" >
        <div class="col-6">
            <form>
                <input type="date" name="date" value="{{ app.request.get('date') ?  app.request.get('date') : '' }}" class="form-control mt-3">
                <input type="submit" class="btn btn-primary mt-3 px-5 py-3">
            </form>
        </div>
    </div>

    <div class="container-fluid mt-5">
