                                    <p class="text-muted">
                                        <i class="me-1">#</i> 123456789
                                    </p>
                                    <h5 class="text-truncate font-size-16 mb-1">{{ infosDeparture.customerCard.holder|title}}</h5>

                                    <p>From: <br>
                                        {{ infosDeparture.fromStart|title}} 
                                    </p>
                                    <p>To: <br>
                                        {{ infosDeparture.toArrival|title}} 
                                    </p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
