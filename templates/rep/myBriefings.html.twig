   {#  {{ include('partials/page-title.html.twig', {pagetitle: 'Team Manager', title: 'Reps Briefings'}) }} #}

<div data-group="group-{{i}}" >

    <!-- Message d'alerte : vous avez bien changez le status -->
    <div data-group="group-{{i}}" class="alert alert-danger alert-dismissible fade show px-4 mb-0 text-center d-none" role="alert">
        <i class="uil uil-exclamation-octagon d-block display-4 mt-2 mb-3 text-danger"></i>
        {# <h5 class="text-danger">Be carrefulle</h5> #}
        <p>{% trans %}You just changed the status{% endtrans %}<br/> 
            <span id="oldStatus">{{ transferArrival.status.name }}</span> <i class="uil-arrow-right"></i> <span id="newStatus"></span>
        </p>
    </div>


    <div class="d-flex flex-row justify-content-around bd-highlight mb-3">
        <button type="button" id="arrived" data-group="group-{{i}}" class="btn btn-status {{ (transferArrival.status.name|lower == "arrived") ? 'btn-success' : 'btn-outline-success' }} btn-sm p-1 ">Arrived</button>
        <button type="button" id="go show (airport)" data-group="group-{{i}}" class="btn btn-status {{ (transferArrival.status.name|lower == "go show (airport)") ? 'btn-success' : 'btn-outline-success' }} btn-sm p-1">Go Show A.</button>
        <button type="button" id="go show (hotel)" data-group="group-{{i}}" class="btn btn-status {{ (transferArrival.status.name|lower == "go show (hotel)") ? 'btn-success' : 'btn-outline-success' }} btn-sm p-1">Go Show H.</button>
        <button type="button" id="no show" data-group="group-{{i}}" class="btn btn-status {{ (transferArrival.status.name|lower == "no show") ? 'btn-danger' : 'btn-outline-danger' }} btn-sm p-1">No Show</button>
        <span id="transferArrivalId" data-group="group-{{i}}" class="d-none">{{ transferArrival.id }}</span>
        <span id="staffId" data-group="group-{{i}}" class="d-none">{{ app.user.id }}</span>
        <span id="group-{{i}}" data-group="group-{{i}}" class="d-none">group-{{i}}</span>
    </div>
</div>



        <!-- Ma page -->
       {#  <h4 class="text-center mb-4">Briefing {{date | date('d/m/Y') }}</h4> #}

        <div class="row justify-content-center mb-5">
            <div class="col-md-6 col-lg-5">
                <div class="d-flex flex-row bd-highlight mb-3 me-4  align-items-center">
                    <div class="boxVertical"> 
                        <div class="badge rounded-pill bg-primary mt-1 mb-3 verticaltext">
                            <span class="fs-6">{{ hour }}</span>
                        </div>
                    </div>
                    <div class="flex-grow-1 feed-item-list rep-timeline-box border-primary  mb-3">
                        <div class="d-flex justify-content-between">
                            <p>{{date | date('d/m/Y') }}</p>
                            <p>{{ hotels|length }}  {{ hotels|length > 1 ? 'hotels'|trans : 'hotel'|trans }}</p>
                        </div>
                        <div class="row mb-2">
                        {% for hotel in hotels %}
                            <div class="text-muted mb-1">
                                -<b>{{ hotel.name|title }}</b>
                            </div>   
                        {% endfor %}
                        </div>

                        <div class="d-flex justify-content-between justify-content-sm-evenly">
                            <div>
                                {% trans %}Adults{% endtrans %}:{{paxTab['adults']}}
                            </div>
                            <div>
                                {% trans %}Children{% endtrans %}:{{paxTab['children']}}
                            </div>
                            <div>
                                {% trans %}Babies{% endtrans %}:{{paxTab['babies']}}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">

                {% set i = 1 %}
                {% for transferArrival in attributionClientsByRepAndDate|sort((a, b) => a.meetingAt <=> b.meetingAt) %}

                    {%  set statusClass = (transferArrival.status.name|lower != "no show") ? 'border-success' : 'border-danger'  %}
                    <div class="col-lg-12">
                        <div data-group="group-{{i}}" class="card border {{ statusClass }}">
                            <div class="card-body">
                                <div class="d-flex flex-row bd-highlight mb-3">
                                    <div class="me-2">
                                        <i class="uil uil-arrow-circle-right"></i>
                                    </div>
                                    <div class="">
                                        <p><a href="{{ path('app_customer_card_show', {id: transferArrival.customerCard.id  }) }}"> <b><span id="textToCopy-{{i}}">{{ transferArrival.customerCard.holder|title }}</span></b> </a><br>
                                            {{ transferArrival.customerCard.agency|title }}<br>
                                            <b>{{ transferArrival.toArrival|title}}</b>
                                        </p>
                                    </div>
                                </div>


                                <div class="row mb-3 justify-content-around align-items-center">

                                    <div class="col-6 ps-4">
                                        <div class="mb-1">
                                            Adultes: <b>{{ transferArrival.adultsNumber }}</b>
                                        </div>
                                        <div class="mb-1">
                                            Children: <b>{{ transferArrival.childrenNumber }}</b>
                                        </div>
                                        <div class="mb-1">
                                            B√©b√©s: <b>{{ transferArrival.babiesNumber }}</b>
                                        </div>
                                    </div>

                                    <div class="col-3 text-end">
                                        <p class="pt-1">
                                            <img src="{{ asset("images/brands/copier.png")}}" id="{{i}}" class="cursor w-60" title="copier" value="copier"/><br>
                                            <span id="thumb-{{i}}" class="thumb d-none">üëç</span>
                                        </p>
                                    </div>
                                    <div class="col-3 text-end">
                                        <p>
                                            <a href="{{ path('app_whats_app_client', {'natureTransfer': 'arrival','transferId': transferArrival.id}) }}" class="linkButton "><img src="{{ asset("images/brands/whatsApp.png")}}" class="w-75"/></a>
                                        </p>
                                    </div>
                                </div>

                                <div class="row justify-content-around">
                                    <div class="col-4">
                                        <div><span class="badge rounded-pill bg-primary p-2 mt-1 mb-3">{{ transferArrival.customerCard.reservationNumber }}</span></div>
                                    </div>
                                    <div class="col-4 text-center">                     
                                        {% if transferArrival.fromStart == "Punta cana international (puj)" %}
                                            <div><span class="badge rounded-pill bg-primary py-2 px-3 mt-1 mb-3">PUJ</div>
                                        {% elseif transferArrival.fromStart == "Santo domingo (sdq)" %}
                                            <div><span class="badge rounded-pill bg-primary py-2 px-3 mt-1 mb-3">SDQ</div>
                                        {% elseif transferArrival.fromStart == "La romana international (lrm)" %}
                                            <div><span class="badge rounded-pill bg-primary py-2 px-3 mt-1 mb-3">LRM</div>
                                        {% else %}
                                            <div><span>{{ transferArrival.fromStart }}</div>
                                        {% endif %} 
                                    </div>
                                    <div class="col-4 text-end">
                                        <div><span class="badge rounded-pill bg-primary py-2 px-3 mt-1 mb-3">{{ transferArrival.hour|date('H:i') }}</span></div>
                                </div>

                            </div>
                            <!-- Button Modal -->
                            <button type="button" class="badge btn-sm btn-primary waves-effect waves-light" data-bs-toggle="modal" data-bs-target="#myModal-{{i}}">Show More</button>
                        
                            <!-- sample modal content -->
                            <div id="myModal-{{i}}" class="modal fade" tabindex="-1" aria-labelledby="myModalLabel" style="display: none;" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="myModalLabel"><a href="{{ path('app_customer_card_show', {id:transferArrival.customerCard.id})}}"><span id="textToCopy-{{i}}">{{ transferArrival.customerCard.holder|title }}</span></a> - <span class="fs-6">{{ transferArrival.customerCard.reservationNumber|upper }}</span></h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <h4 class="">Arrival</h4>

                                            <div class="mt-3">
                                                <ul class="list-unstyled">
                                                    <li class="event-list">
                                                        <h5>From</h5>
                                                        <p class="text-muted">{{ transferArrival.fromStart }}</p>       
                                                    </li>
                                                    <li class="event-list">
                                                        <h5>To</h5>
                                                        <p class="text-muted">{{ transferArrival.toArrival }}</p>       
                                                    </li>
                                                    <li class="event-list">
                                                        <h5>Meeting At</h5>
                                                        <p class="text-muted">{{ transferArrival.meetingAt|date('d/m/Y - H:i') }}</p>       
                                                    </li>
                                                    <li class="event-list">
                                                        <h5>Meeting Point</h5>
                                                        <p class="text-muted">{{ transferArrival.meetingPoint }}</p>       
                                                    </li>
                                                    <li class="event-list">
                                                        <h5>Service Number</h5>
                                                        <p class="text-muted">{{ transferArrival.serviceNumber }}</p>       
                                                    </li>
                                                    <hr>
                                                    <li class="event-list">
                                                        <h5>Flight Number</h5>
                                                        <p>{{ transferArrival.flightNumber|upper }}</p>       
                                                    </li>
                                                    <li class="event-list">
                                                        <h5>Flight Hour</h5>
                                                        <p>{{ transferArrival.hour|date('H:i') }}</p>       
                                                    </li>
                                                    <li class="event-list">
                                                        <h5>Pax</h5>
                                                    <p>A:{{ transferArrival.adultsNumber }}, C:{{ transferArrival.childrenNumber }}, B:{{ transferArrival.babiesNumber }}   </p>       
                                                    </li>
                                                </ul>
                                            </div>
                                                
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-light waves-effect" data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div><!-- /.modal-content -->
                                </div><!-- /.modal-dialog -->
                            </div><!-- /.modal -->
                        </div>
                    </div>
                {% set i = i+1 %}        
                {% endfor %}
                </div>
            </div>
        </div>

<!-- footer -->

                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->

                {{ include('partials/footer.html.twig') }}
            </div>
