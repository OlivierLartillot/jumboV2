{{ include('partials/header-reproupement.html.twig') }}

    {{ include('partials/page-title.html.twig', {pagetitle: 'Team Manager', title: 'Reps Briefings'}) }}

        <div class="row mb-3">    
            <form action={{ path('app_admin_rep_replist') }} method="GET">
                <input name="date" type="date" value="{{date | date('Y-m-d') }}">
                <input type="submit" class="btn btn-primary waves-effect waves-light btn-sm">
            </form>
        </div>



        <p class="alert alert-info" role="alert">
            {% trans %}Arrival date{% endtrans %}: <b>{{ date|date_modify("-1 day")| date('d-m-Y')}}</b><br/>
            {% trans %}Briefing date{% endtrans %}: <b>{{ date| date('d-m-Y')}}</b>
        </p>

        <div class="row">
            
           
                <div class="col-sm-5 mb-3 mb-sm-0">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ user }} </h5>

                                {% if  paxTab[user.username] is defined %}
                                    {% set paxCount = paxTab[user.username]['adults'] + paxTab[user.username]['children'] + paxTab[user.username]['babies'] %}
                                    {% if paxCount == 0 %}  <p class="card-text">{% trans %}This rep has no client assigned today.{% endtrans %}</p> 
                                    {% else %}   
                                    <p>{% trans %}Adults{% endtrans %}: {{ paxTab[user.username]['adults'] }}  / {% trans %}Children{% endtrans %}: {{ paxTab[user.username]['children'] }}  / {% trans %}Babies{% endtrans %}: {{ paxTab[user.username]['babies'] }} </p>
                                    {% endif %}
                                {% endif %}
                                <hr>
                                {% for regroupement in regroupementsClients|sort((a, b) => a.meetingAt <=> b.meetingAt) %}
                               

                                    {% if (regroupement is empty) %}                                                        
                                    {% endif %}
                                    {% if regroupement.staff == user %}
                                        <p class="card-text {{ (regroupement.getMeetingAtTime == '00:01') ? "text-danger" : "text-success" }}">
                                            {# Définir l'hotel pour avoir accès a ses propriétés id name etc #}
                                            {% set hotel = null %}
                                            {% for infosTransfer in regroupement.transferArrivals %}
                                                {# Construire le tableau #}
                                                {% set hotel =  infosTransfer.toArrival %}
                                            {% endfor %}
                                            {% trans %}Hotel{% endtrans %}: <strong>{{ hotel.name|title }}</strong><br/>
                                            {% trans %}Agency{% endtrans %}: <strong>{{ regroupement.agency|title }}</strong><br/>
                                            Pax:<strong>
                                            {# Récupération des infos de pax pour chaque "regroupement et adultes/enfants/bébés #}
                                            {% if paxPerHotelAgency[user.username~'_adults'][regroupement.agency.id~'_'~hotel.id] is defined %}
                                                A: {{ paxPerHotelAgency[user.username~'_adults'][regroupement.agency.id~'_'~hotel.id] }}, 
                                            {% endif %}
                                            {% if paxPerHotelAgency[user.username~'_children'][regroupement.agency.id~'_'~hotel.id] is defined %}
                                                N: {{ paxPerHotelAgency[user.username~'_children'][regroupement.agency.id~'_'~hotel.id] }}, 
                                            {% endif %}
                                            {% if paxPerHotelAgency[user.username~'_babies'][regroupement.agency.id~'_'~hotel.id] is defined %}
                                                B: {{ paxPerHotelAgency[user.username~'_babies'][regroupement.agency.id~'_'~hotel.id] }} 
                                            {% endif %}
                                            </strong>
                                            <br/>
                                            {% trans %}Meeting at{% endtrans %} <strong>{{ regroupement.getMeetingAtTime }} - {{ regroupement.meetingPoint != null ? regroupement.meetingPoint.name : "" }}</strong>
                                        </p>
                                        <hr>
                                    {% endif %}
                                {% endfor %}
                            
                        </div>              
                    </div>
                </div>
          
        </div>

{{ include('partials/footer-regroupement.html.twig') }}

