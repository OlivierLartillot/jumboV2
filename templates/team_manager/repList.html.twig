{{ include('partials/header-reproupement.html.twig') }}

    {{ include('partials/page-title.html.twig', {pagetitle: 'Team Manager', title: 'Reps Briefings'}) }}

        <div class="row mb-3">    
            <form action={{ path('app_admin_team_manager_replist') }} method="GET">
                <input name="date" type="date" value="{{date | date('Y-m-d') }}">
                <input type="submit" class="btn btn-primary waves-effect waves-light btn-sm">
            </form>
        </div>

        {% if countNonAssignedClient > 0 %}
            <p class="alert alert-danger" role="alert">{{ countNonAssignedClient }} {{ (countNonAssignedClient>1) ? "clients do not"|trans : "client does not"|trans }} {% trans %} yet have a meeting time assigned{% endtrans %}.</p>
        {% else %}
            <p class="alert alert-success" role="alert">{% trans %}No or more client groups to assign for this date{% endtrans %}.</p>
        {% endif %}

        <p class="alert alert-info" role="alert">
            {% trans %}Arrival date{% endtrans %}: <b>{{ date|date_modify("-1 day")| date('d-m-Y')}}</b><br/>
            {% trans %}Briefing date{% endtrans %}: <b>{{ date| date('d-m-Y')}}</b>
        </p>

        <div class="row">
            
            {% for user in users %}
                <div class="col-sm-5 mb-3 mb-sm-0">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ user }} </h5>

                                {% if ( ("ROLE_HULK" in app.user.roles) or ("ROLE_SUPERMAN" in app.user.roles) ) %}
                                    {% set rights = true %}
                                {% elseif  app.user == user %}
                                    {% set rights = true %}
                                {% else %}
                                    {% set rights = false %}
                                {% endif %}

                                {% set paxCount = paxTab[user.username]['adults'] + paxTab[user.username]['children'] + paxTab[user.username]['babies'] %}

                                {% if paxCount == 0 %}  <p class="card-text">{% trans %}This rep has no client assigned today.{% endtrans %}</p> 
                                {% else %}   
                                <p>{% trans %}Adults{% endtrans %}: {{ paxTab[user.username]['adults'] }}  / {% trans %}Children{% endtrans %}: {{ paxTab[user.username]['children'] }}  / {% trans %}Babies{% endtrans %}: {{ paxTab[user.username]['babies'] }} </p>
                                {% endif %}






                                <hr>

                                {% for regroupement in regroupementsClients[0]|sort((a, b) => a.customerCard.meetingAt <=> b.customerCard.meetingAt) %}
                                    {% if (regroupement is empty) %}                                                        
                                    {% endif %}
                                    {% if regroupement.customerCard.staff == user %}
                                        <p class="card-text {{ (regroupement.customerCard.getMeetingAtTime == '00:01') ? "text-danger" : "text-success" }}">
                                            {# Définir l'hotel pour avoir accès a ses propriétés id name etc #}
                                            {% set hotel = null %}

                                            {% set hotel =  regroupement.toArrival %}
                       
                                            
                                            {% trans %}Hotel{% endtrans %}: <strong>{{ hotel.name|title }}</strong><br/>
                                            {% trans %}Agency{% endtrans %}: <strong>{{ regroupement.customerCard.agency|title }}</strong><br/>
                                            Pax:<strong>
                                            {# Récupération des infos de pax pour chaque "regroupement et adultes/enfants/bébés #}
                                            {% if paxPerHotelAgency[user.username~'_adults'][regroupement.customerCard.agency.id~'_'~hotel.id] is defined %}
                                                A: {{ paxPerHotelAgency[user.username~'_adults'][regroupement.customerCard.agency.id~'_'~hotel.id] }}, 
                                            {% endif %}
                                            {% if paxPerHotelAgency[user.username~'_children'][regroupement.customerCard.agency.id~'_'~hotel.id] is defined %}
                                                N: {{ paxPerHotelAgency[user.username~'_children'][regroupement.customerCard.agency.id~'_'~hotel.id] }}, 
                                            {% endif %}
                                            {% if paxPerHotelAgency[user.username~'_babies'][regroupement.customerCard.agency.id~'_'~hotel.id] is defined %}
                                                B: {{ paxPerHotelAgency[user.username~'_babies'][regroupement.customerCard.agency.id~'_'~hotel.id] }} 
                                            {% endif %}
                                            </strong>
                                            <br/>
                                            {% trans %}Meeting at{% endtrans %} <strong>{{ regroupement.customerCard.getMeetingAtTime }} - {{ (regroupement.customerCard.meetingPoint.checkLanguage(app.user.language) != null) ? regroupement.customerCard.meetingPoint.checkLanguage(app.user.language) : regroupement.customerCard.meetingPoint.en }}</strong>
                                        </p>
                                        <hr>
                                    {% endif %}
                                {% endfor %}
                                {% if rights %}
                                    {% if paxCount > 0 %} 
                                        <a href="{{ path('app_admin_team_manager_fiche_par_date', {user: user.id })}}" class="btn btn-primary">{% trans %}Update{% endtrans %}</a> 
                                    {% endif %}
                                {% endif %}
                        </div>              
                    </div>
                </div>
            {% endfor %}
        </div>

{{ include('partials/footer-regroupement.html.twig') }}

