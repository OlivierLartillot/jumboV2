{{ include('partials/header-reproupement.html.twig') }}

    {{ include('partials/page-title.html.twig', {pagetitle: 'Contacts', title: 'User Grid'}) }}

    <h1 class="text-center">{{ user }} le {{date | date('d m Y') }}</h1>






<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <a href="{{ path('app_admin_team_manager_replist') }}" class="btn btn-secondary waves-effect waves-light"><i class="mdi mdi-plus me-2"></i>Briefing Rep</a>
                        </div>
                    </div>
                </div>


                        <!-- end row -->
  
                           

                    <div class="table-responsive mb-4">
                        <form action="" method="POST">
                        <table class="table table-centered table-striped table-nowrap mb-0">
                        {# <table class="table table-striped border shadow"> #}
                            <thead>
                                <tr>
                                    <th scope="col">Hotel</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Time</th>
                                    <th scope="col">Place</th>
                                </tr>
                            </thead>
                            <tbody>
                                    {% for client in attributionClientsByRepAndDate %}
                                        <tr>
                                            <td>
                                            {% for infosTransfer in client.transfers %}
                                                {{ infosTransfer.toArrival}}
                                            {% endfor %}
                                            </td>
                                            <td>{{ client.holder }}</td> 
                                            <td> <input type="time" value="{{ client.getMeetingAtTime}}" name="hour_{{ client.id }}"/></td> 
                                            <td>
                                                <select name="meetingPoint_{{ client.id }}" id="pet-select">
                                                    {% for meetingPoint in meetingPoints %}

                                                        {% if  client.meetingPoint is not null %}
                                                            <option value="{{meetingPoint.id}}" {{ meetingPoint.id == client.meetingPoint.id ? "selected" : ""}}  >{{meetingPoint.name}}</option>
                                                        {% else %}
                                                            <option value="{{meetingPoint.id}}" >{{meetingPoint.name}}</option>
                                                        {% endif %}
                                                    {% endfor %}
                                                </select>
                                            </td> 
                                        </tr>
                                
                                    {% endfor %}

                            </tbody>
                        </table>
                    </div>

                    <input type="submit">
                </form>
            </div>
        </div>
    </div>
</div>


