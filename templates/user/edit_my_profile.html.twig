{{ include('partials/header-reproupement.html.twig') }}

    {{ include('partials/page-title.html.twig', {pagetitle: 'General Settings', title: 'Edit My Profile'|trans}) }}

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered border-primary mb-0 text-center">

                                <thead class="bg-primary bg-gradient text-light border-end-light">
                                    <tr>                    
                                        <th>{% trans %}Role(s){% endtrans %}</th>
                                        <th>{% trans %}My area{% endtrans %}</th>
                                    </tr>
                                </thead>
                                <tbody>                            
                                    <tr>
                                        <td>
                                            {% for role in app.user.roles %}
                                                {% if role != "ROLE_USER" %}        
                                                    {% if role == "ROLE_HULK" %} {% trans %}Super Admin{% endtrans %} 
                                                        {% elseif role == "ROLE_SUPERMAN" %} {% trans %}Admin{% endtrans %} 
                                                        {% elseif role == "ROLE_REP" %} {% trans %}Rep{% endtrans %} 
                                                        {% elseif role == "ROLE_AIRPORT" %} {% trans %}Airport{% endtrans %} 
                                                        {% elseif role == "ROLE_OPERATIONS" %} {% trans %}Operations{% endtrans %} 
                                                    {% endif %}                                        
                                                {% endif %}
                                            {% endfor %}
                                        </td>

                                        <td>{{ app.user.area|trans }}</td>
                                    </tr>   
                                </tbody>   
                            </table>
    
                            <div class="row justify-content-center mt-3">
                                <div class="col-md-4">
                                    <div class=" mb-3 text-center">
                                        {# read and display just one flash message type #}
                                        {% for message in app.flashes('success') %}
                                            <div class="border rounded p-3 bg-success">
                                                {{ message }}
                                            </div>
                                        {% endfor %}
                                    </div>
                                    <div>
                                        <h3 class="mb-4">{% trans %}Update{% endtrans %}</h3>
                                        {{ include('user/_form.html.twig', {'button_label': 'Update'|trans}) }}
                                    </div>                               
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

